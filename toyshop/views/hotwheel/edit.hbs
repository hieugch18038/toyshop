<form action="/hotwheel/edit/{{hotwheel._id}}" method="post" class="card p-3 bg-warning text-center">
   <h2 class="text text-primary">Edit Product info</h2>
   <div class="form-group">
      <label class="text-danger h6">Product Name<a><input class="form-control" type="text" name="name" value="{{hotwheel.name}}"></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Seri<a><input class="form-control" type="text" name="brand" value="{{hotwheel.seri}}" ></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Image<a><input class="form-control" type="text" name="image" value="{{hotwheel.image}}"></a></label><br>
      <img src="{{hotwheel.image}}" width="120" height="100">
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Made in<a><input class="form-control" type="text" name="made_in" value="{{hotwheel.made_in}}"></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Price<a><input class="form-control" type="text" name="price" value="{{hotwheel.price}}"></a></label>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-success mt-3" type="submit" value="Add">
   </div>
</form>