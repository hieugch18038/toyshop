<form action="/gundam/edit/{{gundam._id}}" method="post" class="card p-3 bg-warning text-center">
   <h2 class="text text-primary">Edit Product info</h2>
   <div class="form-group">
      <label class="text-danger h6">Product Name<a><input class="form-control" type="text" name="name" value="{{gundam.name}}"></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Brand<a><input class="form-control" type="text" name="brand" value="{{gundam.brand}}" ></a></label>
   </div>
   <div class="form-group mt-3">
         <label class="text-success h6">Kit's grade</label>
         <select name="grade" class="form-control">
            <option value="grade">Grade</option>
            <option value="High grade">High grade</option>
            <option value="Master_grade">Master grade</option>
            <option value="Perfect_grade">Perfect grade</option>
            {{#equal gundam.grade 1}}
               <option value="High grade" selected>High grade</option>
               <option value="Master_grade">Master grade</option>
               <option value="Perfect_grade">Perfect grade</option>
            {{/equal}}
            {{#equal gundam.grade 2}}
               <option value="High grade">High grade</option>
               <option value="Master_grade" selected>Master grade</option>
               <option value="Perfect_grade">Perfect grade</option>
            {{/equal}}
            {{#equal gundam.grade 3}}
               <option value="High grade">High grade</option>
               <option value="Master_grade">Master grade</option>
               <option value="Perfect_grade" selected>Perfect grade</option>
            {{/equal}}
         </select>
      </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Image<a><input class="form-control" type="text" name="image" value="{{gundam.image}}"></a></label><br>
      <img src="{{gundam.image}}" width="120" height="100">
   </div>
   <div class="form-group mt-3">
         <label class="text-danger h6">Made in</label>
         {{#equal gundam.made_in "China"}}
            China <input type="radio" name="made_in" value="China" checked>
            Japan <input type="radio" name="made_in" value="Japan">
         {{/equal}}
         {{#equal student.gender "Japan"}}
            China <input type="radio" name="made_in" value="China">
            Japan <input type="radio" name="made_in" value="Japan" checked>
         {{/equal}}
      </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Price<a><input class="form-control" type="text" name="price" value="{{gundam.price}}"></a></label>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-success mt-3" type="submit" value="Add">
   </div>
</form>