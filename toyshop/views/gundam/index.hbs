<div>
    <table class="table table-bordered table-info bg-light mt-3 mb-3 text-center">
        <tr><a class="btn btn-success" href="/gundam/add">Add Product</a></tr>
        <tr>
            <th colspan="7">
                <form action="/gundam/search" method="post">
                    <div class="form-group">
                        <input class="form-control" type="search" name="name" placeholder="Search product">
                    </div>
                </form>
            </th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Grade</th>
            <th>Price</th>
            <th>Made in</th>
            <th>Image</th>
            <th>Option</th>
        </tr>
        
        {{#each gundams}}
        <tr>
            <th>{{name}}</th>
            <th>{{brand}}</th>
            <th>{{grade}}</th>
            <th>{{price}}$</th>
            <th>{{made_in}}</th>
            <th><a href="/gundam/detail/{{_id}}"><img src="{{image}}" width="100" height="100"></a></th>
            <th>
                <a class="btn btn-success" href="/gundam/edit/{{_id}}">Update</a>
                <a class="btn btn-danger" href="/gundam/delete/{{_id}}">Remove</a>
            </th>
        </tr>
        {{/each}}
    </table>
</div>
