<form action="/student/add" method="post" class="card p-3 bg-warning text-center">
   <h2 class="text text-primary">Add new Product</h2>
   <div class="form-group">
      <label class="text-danger h6">Product Name<a><input class="form-control" type="text" name="name" required minlength="3" maxlength="20"></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Brand<a><input class="form-control" type="text" name="brand" required minlength="3" maxlength="20"></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Grade<a><input class="form-control" type="text" name="grade" required minlength="3" maxlength="20"></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Image<a><input class="form-control" type="text" name="image" required></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Made in<a><input class="form-control" type="text" name="made_in" required></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Price<a><input class="form-control" type="number" name="price" required></a></label>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-success mt-3" type="submit" value="Add">
   </div>
</form>