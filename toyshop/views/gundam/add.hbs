<form action="/gundam/add" method="post" class="card p-3 bg-warning text-center">
   <h2 class="text text-primary">Add new Product</h2>
   <div class="form-group">
      <label class="text-danger h6">Product Name<a><input class="form-control" type="text" name="name"></a></label>
   </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Brand<a><input class="form-control" type="text" name="brand" ></a></label>
   </div>
   <div class="form-group mt-3">
         <label class="text-danger h6">Grade</label>
         <select name="grade" class="form-control">
            <option value="grade">Grade</option>
            <option value="High grade">high grade</option>
            <option value="Master_grade">Master grade</option>
            <option value="Perfect_grade">Perfect grade</option>
         </select>
   </div>
</div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Image<a><input class="form-control" type="text" name="image"></a></label>
   </div>
   <div class="form-group mt-3">
         <label class="text-danger h6">Made in</label><br>
         China <input type="radio" name="made_in" value="China">
         Japan <input type="radio" name="made_in" value="Japan">
      </div>
   <div class="form-group mt-3">
      <label class="text-danger h6">Price<a><input class="form-control" type="text" name="price"></a></label>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-success mt-3" type="submit" value="Add">
   </div>
</form>